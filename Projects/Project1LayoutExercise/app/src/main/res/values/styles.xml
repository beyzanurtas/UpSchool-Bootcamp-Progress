<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">#2C2B47</item>
        <item name="android:textSize">39sp</item>
    </style>

    <style name="edittext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:background">@drawable/ic_edittextmail</item>
        <item name="android:textColorHint">#2B2C47</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="button">
        <item name="android:backgroundTint">#2B2C47</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="gray_text">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">#B9B8C6</item>
    </style>

    <style name="label">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="price_blue">
        <item name="android:textColor">#2C2B47</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/acme</item>
    </style>

    <style name="price_dark_gray">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">#87869E</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="price_light_gray">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">#B9B8C6</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>